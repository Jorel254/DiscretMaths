<Window x:Class="MCD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCD" 
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Background="WhiteSmoke">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button  Height="30" HorizontalAlignment="Left" Width="30" x:Name="Back" Click="Back_Click"  BorderBrush="White" BorderThickness="1">
            <TextBlock Text="&#xab;" FontSize="25" FontWeight="DemiBold" Background="White"/>
        </Button>
        <local:MasterControl x:Name="Navigation" Grid.Row="1"/>
    </Grid>

</Window>
